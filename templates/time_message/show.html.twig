{# templates/time_message/show.html.twig #}

{% extends 'theme/base.html.twig' %}

{% block title %}{{ message.titleMsg }}{% endblock %}

{% block body %}
<div class="container time-journal-page time-journal-show-page">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">

            <div class="mb-3">
                <a href="{{ path('app_time_message_index') }}" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i>Back to Journal
                </a>
            </div>

            <div class="card time-panel-card">
                <div class="card-header {% if message.messageTypeG == 'to_future' %}bg-primary{% elseif message.messageTypeG == 'to_past' %}bg-success{% else %}bg-info{% endif %} text-white">
                    <div class="d-flex justify-content-between align-items-center gap-2 flex-wrap">
                        <h2 class="mb-0">
                            <i class="fa-solid fa-envelope-open-text me-2"></i>{{ message.titleMsg }}
                        </h2>
                        <span class="badge bg-light text-dark">{{ message.typeLabel }}</span>
                    </div>
                </div>

                <div class="card-body">
                    {% if message.messageTypeG == 'to_future' %}
                        {% if not message.isDeliveredMsg %}
                            <div class="alert alert-warning time-status-alert">
                                <div class="d-flex align-items-center">
                                    <div class="display-6 me-3"><i class="fa-regular fa-clock"></i></div>
                                    <div>
                                        <strong>This message has not been delivered yet.</strong><br>
                                        {% if message.deliveryDateMsg %}
                                            You will receive it on <strong>{{ message.deliveryDateMsg|date('l, F j, Y \\a\\t g:i a') }}</strong>
                                            ({{ message.getDaysUntilDelivery }} days from now)
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-success time-status-alert">
                                <div class="d-flex align-items-center">
                                    <div class="display-6 me-3"><i class="fa-solid fa-circle-check"></i></div>
                                    <div>
                                        <strong>This message was delivered on {{ message.deliveryDateMsg|date('F j, Y') }}</strong>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}

                    <div class="message-content mb-4 p-4 rounded">
                        <div class="mb-3 text-muted small">
                            Written on {{ message.createdAtMsg|date('l, F j, Y \\a\\t g:i a') }}
                            {% if message.goal %}
                                <br>Related to Goal #{{ message.goal.idGoa }}
                            {% endif %}
                            {% if message.parentMessageId %}
                                <br>This is a reply to another message
                            {% endif %}
                        </div>

                        <div class="display-6 mb-3"><i class="fa-solid fa-quote-left"></i></div>
                        <div class="message-text-block">{{ message.contentMsg|nl2br }}</div>
                    </div>

                    {% if message.videoPathMsg %}
                        <div class="mb-4">
                            <h5 class="mb-3"><i class="fa-solid fa-video me-2"></i>Video Message</h5>
                            <div class="ratio ratio-16x9">
                                <video controls>
                                    <source src="{{ message.videoPathMsg }}" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        </div>
                    {% endif %}

                    <div class="message-meta border-top pt-3">
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted d-block">Message ID: #{{ message.id }}</small>
                                <small class="text-muted d-block">Type: {{ message.messageTypeG }}</small>
                            </div>
                            <div class="col-md-6 text-md-end">
                                {% if message.isDeliveredMsg %}
                                    <span class="badge bg-success">Delivered</span>
                                {% endif %}
                                {% if message.videoPathMsg %}
                                    <span class="badge bg-info">Has Video</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% if message.messageTypeG == 'to_future' and message.isDeliveredMsg %}
                <div class="card mt-4 time-panel-card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fa-solid fa-reply me-2"></i>Reply to Your Past Self</h5>
                    </div>
                    <div class="card-body text-center">
                        <p>Now that you received this message, you can write a reply.</p>
                        <a href="{{ path('app_time_message_reply', {'id': message.id}) }}" class="btn btn-success btn-lg">
                            <i class="fa-solid fa-pen-to-square me-1"></i>Write a Reply
                        </a>
                    </div>
                </div>
            {% endif %}

            {% if replies is defined and replies|length > 0 %}
                <div class="card mt-4 time-panel-card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fa-solid fa-comments me-2"></i>Replies from Your Future Self</h5>
                    </div>
                    <div class="card-body">
                        {% for reply in replies %}
                            <div class="card mb-3 border-success time-mini-card">
                                <div class="card-header bg-success text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">{{ reply.titleMsg }}</h6>
                                        <small>{{ reply.createdAtMsg|date('M j, Y') }}</small>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="message-text-block">{{ reply.contentMsg }}</p>
                                    {% if reply.videoPathMsg %}
                                        <span class="badge bg-info">Has video</span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
</div>
{% endblock %}
