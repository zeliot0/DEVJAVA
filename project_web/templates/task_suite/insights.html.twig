{% extends 'base.html.twig' %}

{% block title %}Task Suite - Insights{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/task-suite.css?v=20260215c') }}">
{% endblock %}

{% block body %}
<div class="suite-page" data-suite-page="insights">
  {% include 'task_suite/_nav.html.twig' %}

  <section class="suite-grid four" id="insightsKpis">
    <article class="suite-card"><h3>Total</h3><p id="kpiTotal">-</p></article>
    <article class="suite-card"><h3>Done</h3><p id="kpiDone">-</p></article>
    <article class="suite-card"><h3>Cycle Time (h)</h3><p id="kpiCycle">-</p></article>
    <article class="suite-card"><h3>Completion Rate</h3><p id="kpiCompletion">-</p></article>
  </section>

  <section class="suite-grid two">
    <article class="suite-card">
      <h3>Workload by Status</h3>
      <div id="chartWorkload" class="bars"></div>
    </article>
    <article class="suite-card">
      <h3>Throughput (Done per Day)</h3>
      <div id="chartThroughput" class="bars"></div>
    </article>
  </section>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/task-suite.js?v=20260215c') }}"></script>
{% endblock %}
