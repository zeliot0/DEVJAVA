{% extends 'base.html.twig' %}

{% block title %}Task Suite - Hub{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/task-suite.css?v=20260215c') }}">
{% endblock %}

{% block body %}
<div class="suite-page">
  {% include 'task_suite/_nav.html.twig' %}

  <section class="suite-grid kpis">
    <article class="suite-card"><h3>Total Tasks</h3><p>{{ kpis.total }}</p></article>
    <article class="suite-card"><h3>In Progress</h3><p>{{ kpis.doing }}</p></article>
    <article class="suite-card"><h3>Done</h3><p>{{ kpis.done }}</p></article>
    <article class="suite-card"><h3>High Priority</h3><p>{{ kpis.high }}</p></article>
    <article class="suite-card"><h3>Overdue</h3><p>{{ kpis.overdue }}</p></article>
    <article class="suite-card"><h3>Completion Rate</h3><p>{{ kpis.completionRate }}%</p></article>
  </section>
</div>
{% endblock %}
