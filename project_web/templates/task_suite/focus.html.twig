{% extends 'base.html.twig' %}

{% block title %}NEXA Focus Mode{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/task-suite.css?v=20260216a') }}">
  <style>
    /* Premium Focus Mode - Blitzit Vibe */
    /* Premium Focus Mode - Blitzit Vibe */
    body.focus-mode-active {
        overflow: hidden;
        background: #020205 !important;
    }

    .focus-blitz-container {
        display: grid;
        grid-template-columns: 340px 1fr;
        height: 100vh;
        background: #020205;
        color: #fff;
        font-family: 'Inter', sans-serif;
    }

    /* Sidebar: Task Queue */
    .focus-queue-sidebar {
        background: rgba(8, 8, 12, 0.95);
        border-right: 1px solid rgba(255, 255, 255, 0.08);
        padding: 32px 24px;
        display: flex;
        flex-direction: column;
        gap: 24px;
        backdrop-filter: blur(40px);
        z-index: 20;
    }

    .queue-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 12px;
    }

    .queue-head h2 {
        font-size: 0.8rem;
        font-weight: 900;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.4);
        margin: 0;
    }

    .task-list-focus {
        list-style: none;
        padding: 0;
        margin: 0;
        overflow-y: auto;
        flex: 1;
        padding-right: 4px;
    }

    .task-list-focus::-webkit-scrollbar { width: 4px; }
    .task-list-focus::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.1); border-radius: 10px; }

    .focus-task-item {
        padding: 18px;
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.04);
        margin-bottom: 14px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
    }

    .focus-task-item:hover {
        background: rgba(255, 255, 255, 0.06);
        border-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .focus-task-item.active {
        background: rgba(91, 92, 240, 0.1);
        border-color: rgba(91, 92, 240, 0.4);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
    }

    .focus-task-item.active::before {
        content: "";
        position: absolute;
        left: 0; top: 18px; bottom: 18px;
        width: 4px;
        background: #5b5cf0;
        border-radius: 0 4px 4px 0;
    }

    .focus-task-item h4 {
        margin: 0 0 8px;
        font-size: 0.92rem;
        font-weight: 700;
        line-height: 1.4;
        color: rgba(255, 255, 255, 0.9);
    }

    .focus-task-item .meta {
        font-size: 0.72rem;
        color: rgba(255, 255, 255, 0.35);
        display: flex;
        gap: 12px;
        font-weight: 600;
    }

    /* Main Focus Area */
    .focus-main-area {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px;
        background: #020205;
        overflow: hidden;
    }

    .mesh-bg {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(91, 92, 240, 0.08) 0%, transparent 40%),
            radial-gradient(circle at 80% 70%, rgba(159, 122, 234, 0.07) 0%, transparent 40%),
            radial-gradient(circle at 50% 50%, rgba(2, 2, 5, 1) 0%, transparent 100%);
        pointer-events: none;
        z-index: 1;
    }

    .focus-nav-top {
        position: absolute;
        top: 32px;
        right: 32px;
        display: flex;
        gap: 14px;
        z-index: 30;
    }

    .btn-glass {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        padding: 10px 20px;
        border-radius: 14px;
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 700;
        backdrop-filter: blur(12px);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-glass:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
    }

    .current-task-hero {
        text-align: center;
        margin-bottom: 24px;
        max-width: 800px;
        position: relative;
        z-index: 10;
        animation: heroIn 1s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes heroIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .current-task-hero span {
        text-transform: uppercase;
        font-size: 0.7rem;
        letter-spacing: 0.3em;
        color: #5b5cf0;
        font-weight: 900;
        display: block;
        margin-bottom: 16px;
        opacity: 0.8;
    }

    .current-task-hero h1 {
        font-size: 3.2rem;
        font-weight: 900;
        margin: 0;
        letter-spacing: -0.03em;
        line-height: 1.1;
        background: linear-gradient(to bottom, #fff, rgba(255,255,255,0.7));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* The Huge Timer */
    .timer-grand {
        position: relative;
        width: 440px;
        height: 440px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px 0;
        z-index: 10;
    }

    .timer-svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transform: rotate(-90deg);
    }

    .timer-track {
        fill: none;
        stroke: rgba(255, 255, 255, 0.03);
        stroke-width: 12;
    }

    .timer-progress {
        fill: none;
        stroke: #5b5cf0;
        stroke-width: 12;
        stroke-linecap: round;
        transition: stroke-dashoffset 1s linear;
        filter: drop-shadow(0 0 15px rgba(91, 92, 240, 0.4));
    }

    .timer-numbers {
        font-family: 'Inter', sans-serif;
        font-variant-numeric: tabular-nums;
        font-size: 7rem;
        font-weight: 900;
        letter-spacing: -0.04em;
        z-index: 1;
        text-shadow: 0 0 30px rgba(0,0,0,0.5);
    }

    /* Blitz Controls */
    .focus-controls-blitz {
        display: flex;
        gap: 24px;
        margin-top: 32px;
        z-index: 10;
    }

    .blitz-btn {
        width: 68px;
        height: 68px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(255, 255, 255, 0.04);
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        cursor: pointer;
        backdrop-filter: blur(14px);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .blitz-btn:hover {
        background: rgba(255, 255, 255, 1);
        color: #000;
        transform: translateY(-4px) scale(1.05);
        box-shadow: 0 15px 35px rgba(255, 255, 255, 0.15);
    }

    .blitz-btn.primary {
        background: #fff;
        color: #000;
        width: 84px;
        height: 84px;
        border-radius: 24px;
        font-size: 1.8rem;
    }

    .blitz-btn.active {
        background: #5b5cf0;
        color: #fff;
        border-color: #5b5cf0;
    }

    /* Minimal Player */
    .minimal-player {
        position: absolute;
        bottom: 32px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 8px 10px 8px 18px;
        border-radius: 999px;
        display: flex;
        align-items: center;
        gap: 16px;
        backdrop-filter: blur(20px);
        z-index: 30;
    }

    .minimal-player i.main-ico {
        color: #5b5cf0;
        font-size: 0.9rem;
        animation: floatA 2s ease-in-out infinite;
    }

    .minimal-player span {
        font-size: 0.8rem;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.7);
        letter-spacing: 0.02em;
    }

    .music-play-mini {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        background: rgba(255,255,255,0.1);
        border: none;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: 0.2s;
    }

    .music-play-mini:hover {
        background: #fff;
        color: #000;
    }

    @keyframes floatA {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-3px); }
    }

    /* Stats Dashboard Overlay */
    .focus-top-stats {
        position: absolute;
        top: 32px;
        left: 372px;
        display: flex;
        gap: 32px;
        z-index: 30;
    }

    .stat-mini {
        display: flex;
        flex-direction: column;
    }

    .stat-mini label {
        font-size: 0.6rem;
        color: rgba(255, 255, 255, 0.3);
        text-transform: uppercase;
        font-weight: 900;
        letter-spacing: 0.2em;
        margin-bottom: 2px;
    }

    .stat-mini span {
        font-size: 1.2rem;
        font-weight: 900;
        color: #fff;
    }

    .sidebar-footer {
        margin-top: auto;
        padding: 24px;
        border-radius: 20px;
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(255,255,255,0.06);
    }

    /* Break Mode */
    .focus-blitz-container.break-mode {
        background: #020604;
    }
    .focus-blitz-container.break-mode .mesh-bg {
        background: radial-gradient(circle at center, rgba(16, 185, 129, 0.05) 0%, transparent 70%);
    }
    .focus-blitz-container.break-mode .timer-progress {
        stroke: #10b981;
        filter: drop-shadow(0 0 15px rgba(16, 185, 129, 0.4));
    }
    .focus-blitz-container.break-mode .stat-mini label { color: rgba(16, 185, 129, 0.4); }
  </style>
{% endblock %}

{% block body %}
<div class="focus-blitz-container" id="focusBlitzContainer" data-suite-page="focus">
    
    <!-- Left Sidebar: Task Queue -->
    <aside class="focus-queue-sidebar">
        <div class="queue-head">
            <h2>Up Next</h2>
            <button id="refreshTasksBtn" style="background:none; border:none; color:rgba(255,255,255,0.3); cursor:pointer;"><i class="fa-solid fa-rotate"></i></button>
        </div>
        
        <ul class="task-list-focus" id="focusTaskList">
            {% for task in tasks %}
            <li class="focus-task-item {{ loop.first ? 'active' : '' }}" 
                data-task-id="{{ task.id }}" 
                data-task-title="{{ task.title }}">
                <h4>{{ task.title }}</h4>
                <div class="meta">
                    <span><i class="fa-solid fa-flag"></i> {{ task.priority }}</span>
                    {% if task.category %}<span><i class="fa-solid fa-layer-group"></i> {{ task.category.name }}</span>{% endif %}
                </div>
            </li>
            {% else %}
            <li class="muted" style="padding:20px; text-align:center; color:rgba(255,255,255,0.3);">No active tasks</li>
            {% endfor %}
        </ul>

        <div class="sidebar-footer">
            <div class="stat-mini">
                <label>Weekly Momentum</label>
                <span>{{ tasks|length }} Tasks remain</span>
            </div>
        </div>
    </aside>

    <!-- Main Focus View -->
    <main class="focus-main-area">
        <div class="mesh-bg"></div>

        <div class="focus-nav-top">
            <button class="btn-glass" id="btnSettingsToggle"><i class="fa-solid fa-sliders"></i> Settings</button>
            <a href="{{ path('app_task_suite_hub') }}" class="btn-glass"><i class="fa-solid fa-arrow-right-from-bracket"></i> Exit</a>
        </div>

        <div class="focus-top-stats">
            <div class="stat-mini">
                <label>Sessions</label>
                <span id="focusSessionsCount">0</span>
            </div>
            <div class="stat-mini">
                <label>Focus Time</label>
                <span id="focusTimeTotal">0m</span>
            </div>
            <div class="stat-mini">
                <label>Streak</label>
                <span id="focusStreakDays">0d</span>
            </div>
        </div>

        <div class="current-task-hero">
            <span id="focusStatusLabel">Deep Work Session</span>
            <h1 id="currentTaskTitle">{% if tasks|length > 0 %}{{ tasks[0].title }}{% else %}Ready to Start?{% endif %}</h1>
        </div>

        <div class="timer-grand">
            <svg class="timer-svg" viewBox="0 0 200 200">
                <circle class="timer-track" cx="100" cy="100" r="90"></circle>
                <circle class="timer-progress" id="timerProgressCircle" cx="100" cy="100" r="90" 
                    stroke-dasharray="565.48" stroke-dashoffset="0"></circle>
            </svg>
            <div class="timer-numbers" id="timerDisplay">25:00</div>
        </div>

        <div class="focus-controls-blitz">
            <button class="blitz-btn" id="blitzReset" title="Reset"><i class="fa-solid fa-rotate-left"></i></button>
            <button class="blitz-btn primary" id="blitzToggle" title="Start/Pause"><i class="fa-solid fa-play"></i></button>
            <button class="blitz-btn" id="blitzDone" title="Mark as Done" style="background:rgba(16,185,129,0.08); border-color:rgba(16,185,129,0.2); color:#10b981;"><i class="fa-solid fa-check"></i></button>
            <button class="blitz-btn" id="blitzSkip" title="Break/Skip"><i class="fa-solid fa-angles-right"></i></button>
        </div>

        <div class="minimal-player" id="minimalPlayer">
            <i class="fa-solid fa-volume-high main-ico"></i>
            <span id="nowPlayingLabel">Silent Focus</span>
            <button class="music-play-mini" id="toggleMusicFocus"><i class="fa-solid fa-play" style="font-size:0.7rem;"></i></button>
        </div>

        <div class="focus-settings-btn" id="focusSettingsIcon">
            <i class="fa-solid fa-sliders"></i>
        </div>
    </main>

    <!-- Hidden audio element -->
    <audio id="focusAmbientAudio" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-8.mp3" type="audio/mpeg">
    </audio>
    
    <!-- Settings Panel (Hidden Initially) -->
    <div id="focusSettingsPanel" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,0.8); z-index:100; backdrop-filter:blur(20px);">
        <div style="max-width:400px; margin: 100px auto; background:#111; padding:30px; border-radius:24px; border:1px solid rgba(255,255,255,0.1);">
            <h2 style="margin-top:0;">Focus Settings</h2>
            <div style="display:grid; gap:20px;">
                <label style="display:grid; gap:8px; font-weight:700;">Focus Duration (min)
                    <input type="number" id="inputFocusTime" value="25" style="background:#222; border:1px solid #333; color:#fff; padding:10px; border-radius:8px;">
                </label>
                <label style="display:grid; gap:8px; font-weight:700;">Break Duration (min)
                    <input type="number" id="inputBreakTime" value="5" style="background:#222; border:1px solid #333; color:#fff; padding:10px; border-radius:8px;">
                </label>
                <button class="suite-btn" id="saveSettingsFocus" style="width:100%; margin-top:20px;">Save Defaults</button>
                <button class="btn-exit" id="closeSettingsFocus" style="text-align:center;">Close</button>
            </div>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/task-suite.js?v=20260216a') }}"></script>
{% endblock %}
