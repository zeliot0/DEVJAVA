                border-radius: 0 16px 16px 0;
            }

            .side-panel {
                border-radius: 0 16px 16px 0;
            }

            .adm-main {
                margin-left: 88px;
                padding-top: 20px;
                padding-left: 8px;
            }

            .page-title {
                font-size: 1.5rem;
            }
        }
